            </div>
          </div> #}
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                 {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
{% endif %}
              </select>
            </div>
          </div>

          <div class="form-group col-xs-12">
            <table class="table table-striped table-bordered table-hover">
              <tr>
                <th>{{text_name}}</th>
                <th>{{text_category}}</th>
                <th>{{text_banner}}</th>
              </tr>
              
              <tr>
                <td class="text-center"><label class="control-label" for="input-main-banner"><span data-toggle="tooltip" title="{{ help_main_banner }}">{{ text_main_banner }}</span></td>
                <td  class="text-center">
                  <select name="main_banner_category_id" id="input-category" class="form-control">
                    <option value="">{{ text_select }}</option>
                    {% for category in categories %}
                    {% if main_banner_category_id == category.category_id %}
                    <option value="{{ category.category_id }}" selected="selected">{{ category.name }}</option>
                    {% else %}
                    <option value="{{ category.category_id }}">{{ category.name }}</option>
                     {% endif %}
                     {% endfor %}
                  </select>
                </td>
                <td  class="text-center">
                  <div class="form-group col-xs-12">
                    <div class=""><a href="" id="thumb-main-banner" data-toggle="image" class="img-thumbnail"><img src="{{ thumb_main_banner }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
